{
  "compilerOptions": {
    "lib": [
      "es2017",
      "esnext"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "types" : [
      "@types/node"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": ["./types/*"],
      "@/*": ["./*"]
    },
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
